<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fantastic Home</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/site")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Fantastic Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Ethereum", "Index", "Miner")</li>
                    <li>@Html.ActionLink("Finance", "Index", "Finance")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @(System.Web.HttpContext.Current.Application["User"] ?? "Select User")&nbsp;
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var user in FamilyHomeWeb.Controllers.EntityFramework.UserAccountDataController.GetUserAccounts())
                            {
                                <li>
                                    <a onclick="javascript:SelectUser('@user.DisplayName', '@Url.Action("SelectUser", "Home")');">
                                        <span class="glyphicon glyphicon-user"></span>
                                        &nbsp;@user.DisplayName
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <span class="font-bold-italic">Home</span> is the starting place of <span class="font-bold-italic">Love &amp; Dreams</span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
